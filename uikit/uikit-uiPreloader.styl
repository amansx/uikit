.cmp-uiPreloader.p-typ_circle {
	display: inline-block;
	&:before{
		content: '';
		width: 20px; height: 20px;
		border-radius: 20px;
		display: inline-block;
		background-color: $UIKIT.Color.PeterRiver;
		animation: sk-rotateplane 1.2s infinite ease-in-out;
	}
}
	
.cmp-uiPreloader.p-typ_progress {
	margin: 2px;
	display: inline-block;
	width: 20px; height: 20px;
	position: relative;
	border: 1px solid $UIKIT.Color.PeterRiver;
	animation: loader 2s infinite ease;
	border-radius: 3px;	
	&:before{
		content: '';
		display: inline-block;
		height: 100%;
		background-color: $UIKIT.Color.PeterRiver;
		animation: loader-inner 2s infinite ease-in;
  	}
}
	

animatePaddles($UIKIT.Color.PeterRiver, Peter)
.cmp-uiPreloader.p-typ_pong {
	position: relative;
	display: inline-block;
	width: 60px;
	height: 40px;
	overflow: hidden;
	&:before {
		content: "";
		position: absolute;
		margin: 0 auto;
		left: 0;
		right: 0;		
		top: calc(50% - 3px);
		width: 10px;
		height: 10px;
		background: $UIKIT.Color.PeterRiver;
		border-radius: 50%;
		animation: ballbounce 0.6s ease-out infinite;
	}

	&:after {
		left: 0;
		content: '';
		top: 10px;
		position: absolute;
		display: inline-block;
		left: calc(50% - 3px);
		height: 20px;
		width: 6px;
		animation: paddlesPeter 0.75s ease-out infinite;
	}
}

.cmp-uiPreloader.p-typ_side {
	display: inline-block;
	position: relative;
	padding: 20px 40px 20px 40px;
	text-align: center;
	
	color: $UIKIT.Color.PeterRiver;
	font-family: Arial;
	font-size: 10px;
	line-height: 10px;
	letter-spacing: 5px;
	
	&::before, &::after {
		content: "";
		display: block;
		width: 15px; height: 15px;
		background: $UIKIT.Color.PeterRiver;
		border-radius: 15px;
		position: absolute;
		animation: sideLoader .7s infinite alternate ease-in-out;
	}
	&::before { top: 0; }
	&::after { bottom: 0; }	
}


.cmp-uiPreloader.p-typ_text{
    position: relative;
    display: inline-block;
	&:before, &:after {
		font-family: arial;
		font-size: 20px;
		line-height: 20px;
		letter-spacing: 5px;
	}
	&:before {
		color: alpha($UIKIT.Color.PeterRiver, 0.4);
		content: attr(data-text);
		white-space: nowrap;
	}
	&:after {
		color: $UIKIT.Color.PeterRiver;
		content: attr(data-text);
		position: absolute;
		overflow: hidden;
		max-width: 100%;
		white-space: nowrap;
		animation: textLoader 2s linear infinite;
		left: 0; top: 0;
	}
}

.cmp-uiPreloader.p-typ_spinner{
	display: inline-block;
	height: 28px;
	width: 28px;
	animation: rotate 1s infinite linear;
	border: 2px solid $UIKIT.Color.PeterRiver;
	border-right-color: transparent;
	border-radius: 50%;
}
	
.cmp-uiPreloader.p-typ_progressbar{
	display: inline-block;
	width: 100px;
	height: 5px;
	border: 1px solid $UIKIT.Color.PeterRiver;
	border-radius: 3px;
	background-size: 28px 28px;
	animation: moveBackground 1s linear infinite;
	background-image: stripedGradient($UIKIT.Color.PeterRiver, white);
}